<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <record id="meeting_type_view_tree" model="ir.ui.view">
      <field name="name">meeting.type.view.tree</field>
      <field name="model">meeting.type</field>
      <field name="arch" type="xml">
        <tree string="Meetings Type">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="meeting_meeting_view_tree" model="ir.ui.view">
      <field name="name">meeting.meeting.view.tree</field>
      <field name="model">meeting.meeting</field>
      <field name="arch" type="xml">
        <tree string="Meetings">
          <field name="name"/>
          <field name="date_begin"/>
          <field name="date_end"/>
          <field name="duration"/>
          <field name="meeting_type_id"/>
        </tree>
      </field>
    </record>

    <record id="meeting_meeting_view_form" model="ir.ui.view">
      <field name="name">meeting.meeting.view.form</field>
      <field name="model">meeting.meeting</field>
      <field name="arch" type="xml">
        <form string="Meeting">
          <sheet>
            <group id="information" string="Informations">
              <group>
                <field name="name"/>
                <field name="meeting_type_id"/>
                <field name="date_begin"/>
                <field name="date_end"/>
                <field name="duration"/>
              </group>
            </group>
            <group id="presents" string="PrÃ©sents">
              <field name="user_ids" widget="many2many_tags"/>
              <field name="other_presents"/>
            </group>
            <notebook colspan="4">
              <page name="report" string="Report">
                <field name="pad_report" widget="pad"/>
              </page>
              <page name="agenda" string="Agenda">
                <field name="text_agenda"/>
              </page>
              <page name="minutes" string="Minutes">
                <group>
                  <field name="meeting_president"/>
                  <field name="meeting_secretary"/>
                  <field name="address"/>
                </group>
                <field name="decision_ids" mode="tree">
                  <tree editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="decision"/>
                    <field name="result_vote"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="meeting_meeting_view_search" model="ir.ui.view">
      <field name="name">meeting.meeting.view.search</field>
      <field name="model">meeting.meeting</field>
      <field name="arch" type="xml">
        <search string="Meetings">
          <field name="name"/>
          <field name="date_begin"/>
          <field name="date_end"/>
          <field name="text_agenda"/>
          <field name="text_report"/>
          <group expand="0" string="Group By">
            <filter string="Meeting Month" domain="[]" context="{'group_by': 'date_begin'}"/>
            <filter string="Type" domain="[]" context="{'group_by': 'meeting_type_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="action_meeting" model="ir.actions.act_window">
      <field name="name">Meetings</field>
      <field name="res_model">meeting.meeting</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="meeting.meeting_meeting_view_search"/>
      <field name="context" eval="{'form_view_ref': 'meeting.meeting_meeting_view_form', 'tree_view_ref': 'meeting.meeting_meeting_view_tree', 'with_login': True}"/>
    </record>

    <record id="action_meeting_type" model="ir.actions.act_window">
      <field name="name">Meetings Type</field>
      <field name="res_model">meeting.type</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree</field>
      <field name="context" eval="{'tree_view_ref': 'meeting.meeting_type_view_tree'}"/>
    </record>

  </data>
</odoo>
