<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <record id="project_edit_form_inherit_project_team_worker" model="ir.ui.view">
      <field name="name">project.edit.form.inherit.project.team.worker</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.edit_project"/>
      <field name="arch" type="xml">
        <field name="privacy_visibility" position="after">
          <field name="project_team_ids" widget="many2many_tags"/>
        </field>
        <field name="privacy_visibility" position="attributes">
          <attribute name="attrs">{'invisible': 1}</attribute>
        </field>
      </field>
    </record>

    <record id="project_view_form_simplified_inherit_project_team_worker" model="ir.ui.view">
      <field name="name">project.view.form.simplified.inherit.project.team.worker</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
      <field name="arch" type="xml">
        <field name="name" position="after">
          <field name="project_team_ids" widget="many2many_tags"/>
        </field>
      </field>
    </record>

    <record id="project_team_worker_form_view" model="ir.ui.view">
      <field name="name">project.team.worker</field>
      <field name="model">project.team_worker</field>
      <field name="arch" type="xml">
        <form string="Project Team">
          <sheet>
            <div class="oe_button_box" name="button_box" groups="base.group_user">
              <button class="oe_stat_button" name="get_projects" type="object" icon="fa-files-o">
                <field string="Projects" name="project_count" widget="statinfo"/>
              </button>
            </div>
            <group>
              <field name="name"/>
              <field name="user_ids" options="{'no_create': True}" widget="many2many_tags"/>
              <field name="active"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="project_team_worker_tree_view" model="ir.ui.view">
      <field name="name">project_team_worker_tree_view</field>
      <field name="model">project.team_worker</field>
      <field name="arch" type="xml">
        <tree string="Project Team">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="action_project_team" model="ir.actions.act_window">
      <field name="name">Project Teams</field>
      <field name="res_model">project.team_worker</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
